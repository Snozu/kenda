---
export interface Props {
  title: string;
  description?: string;
  align?: 'center' | 'left' | 'right';
  titleClass?: string;
  descriptionClass?: string;
}

const { 
  title, 
  description, 
  align = 'center',
  titleClass = '',
  descriptionClass = '',
} = Astro.props;

const alignClasses = {
  center: 'text-center',
  left: 'text-left',
  right: 'text-right'
};

const alignClass = alignClasses[align];
---

<div class={`mb-12 ${alignClass}`}>
  <h2 class={`text-3xl md:text-4xl font-bold mb-4 ${titleClass}`}>{title}</h2>
  {description && (
    <p class={`text-lg text-gray-600 max-w-3xl mx-auto ${align === 'center' ? 'mx-auto' : ''} ${descriptionClass}`}>
      {description}
    </p>
  )}
</div>