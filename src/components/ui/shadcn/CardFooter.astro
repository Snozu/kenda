---
/**
 * CardFooter.astro
 * 
 * Componente para el pie de la tarjeta
 * Basado en el dise√±o de shadcn/ui
 */

 interface Props {
  className?: string;
  padding?: boolean;
  border?: boolean;
  bgColor?: 'default' | 'light' | 'none';
}

const { 
  className = '',
  padding = true,
  border = true,
  bgColor = 'none'
} = Astro.props;

// Mapeo de colores de fondo
const bgClasses = {
  default: 'bg-white',
  light: 'bg-gray-50',
  none: ''
};

const classes = [
  padding ? 'px-6 py-4' : '',
  border ? 'border-t' : '',
  bgClasses[bgColor],
  'flex items-center',
  className
].filter(Boolean).join(' ');
---

<div class={classes}>
  <slot />
</div>