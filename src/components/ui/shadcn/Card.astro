---
/**
 * Card.astro
 * 
 * Componente base de tarjeta que proporciona el contenedor principal
 * Basado en el dise√±o de shadcn/ui
 */

 interface Props {
  className?: string;
  hover?: boolean;
  shadow?: 'sm' | 'md' | 'lg' | 'none';
}

const { 
  className = '', 
  hover = false,
  shadow = 'md'
} = Astro.props;

// Mapeo de sombras a clases
const shadowClasses = {
  none: '',
  sm: 'shadow-sm',
  md: 'shadow-md',
  lg: 'shadow-lg'
};

const classes = [
  'bg-white rounded-lg overflow-hidden',
  shadowClasses[shadow],
  hover ? 'transition-shadow duration-300 hover:shadow-lg' : '',
  className
].filter(Boolean).join(' ');
---

<div class={classes}>
  <slot />
</div>