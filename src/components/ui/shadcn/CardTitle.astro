---
/**
 * CardTitle.astro
 * 
 * Componente para el título de la tarjeta
 * Basado en el diseño de shadcn/ui
 */

 interface Props {
  as?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';
  className?: string;
}

const { 
  as: Element = 'h3', 
  className = '' 
} = Astro.props;

const classes = [
  'text-lg font-bold text-gray-800 leading-none tracking-tight',
  className
].filter(Boolean).join(' ');
---

<Element class={classes}>
  <slot />
</Element>