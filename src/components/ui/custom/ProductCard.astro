---
/**
 * ProductCard.astro
 * 
 * Componente para mostrar productos KENDA
 * Utiliza los componentes base de Card
 */

 import Card from '../shadcn/Card.astro';
import CardContent from '../shadcn/CardContent.astro';
import Badge from '../shadcn/Badge.astro';

interface Props {
  name: string;
  image: string;
  category?: string;
  description: string;
  className?: string;
  url?: string;
}

const { 
  name, 
  image, 
  category, 
  description, 
  className = '',
  url = '#'
} = Astro.props;
---

<Card hover={true} className={`h-full flex flex-col ${className} group`}>
  <div class="h-48 bg-gray-100 flex items-center justify-center overflow-hidden">
    <img 
      src={image} 
      alt={name} 
      class="h-40 object-contain transition-transform duration-300 group-hover:scale-105" 
      loading="lazy"
    />
  </div>
  <CardContent className="flex-grow flex flex-col">
    {category && <Badge color="red" className="mb-2">{category}</Badge>}
    <h3 class="text-lg font-bold text-gray-800 mb-2">{name}</h3>
    <p class="text-gray-600 text-sm mb-4 font-light">{description}</p>
    <a 
      href={url} 
      class="text-kenda-red font-medium text-sm flex items-center mt-auto hover:text-red-700 transition-colors"
    >
      Ver detalles
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-0.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
      </svg>
    </a>
  </CardContent>
</Card>