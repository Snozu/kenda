---
/**
 * BenefitCard.astro
 * 
 * Componente para mostrar beneficios de ser distribuidor KENDA
 * Utiliza los componentes base de Card
 */

 import Card from '../shadcn/Card.astro';

interface Props {
  title: string;
  description: string;
  icon: string; // Código SVG o path a un ícono
  className?: string;
  isHtml?: boolean; // Si el ícono es código HTML (SVG) o una ruta de imagen
}

const { 
  title, 
  description, 
  icon, 
  className = '',
  isHtml = true
} = Astro.props;
---

<Card className={`h-48 p-6 flex flex-col items-center justify-center hover:shadow-lg transition-shadow ${className}`}>
  <div class="w-14 h-14 bg-kenda-red bg-opacity-10 rounded-full flex items-center justify-center mb-4">
    {isHtml ? (
      <Fragment set:html={icon} />
    ) : (
      <img src={icon} alt="" class="w-7 h-7" />
    )}
  </div>
  <h3 class="text-lg font-bold text-gray-800 mb-2">{title}</h3>
  <p class="text-gray-600 text-center text-sm font-light">{description}</p>
</Card>