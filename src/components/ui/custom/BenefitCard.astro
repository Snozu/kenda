---
/**
 * BenefitCard.astro
 *   
 * Componente para mostrar beneficios de ser distribuidor KENDA
 * Adaptado para coincidir con el diseño final
 */

interface Props {
  title: string;
  description: string;
  icon: string; // Código SVG 
  className?: string;
  isHtml?: boolean;
}

const { 
  title, 
  description, 
  icon, 
  className = '',
  isHtml = true
} = Astro.props;
---

<div class={`bg-white rounded-xl shadow-sm hover:shadow-md transition-all p-8 ${className}`}>
  <div class="flex flex-col items-start h-full">
    <!-- Icono negro -->
    <div class="mb-4">
      {isHtml && <Fragment set:html={icon} />}
    </div>
    
    <!-- Título -->
    <h3 class="text-xl font-bold text-[#333333] mb-2">{title}</h3>
    
    <!-- Descripción -->
    <p class="text-gray-600 text-sm leading-relaxed">{description}</p>
  </div>
</div>