---
export interface Props {
  title: string;
  description: string;
  icon: string;
  class?: string;
}

const { title, description, icon, class: className = '' } = Astro.props;
---

<div class={`bg-white rounded-lg shadow-md p-6 transition-all duration-300 hover:shadow-lg hover:-translate-y-1 ${className}`}>
  <div class="text-kenda-red mb-4">
    <span class="icon text-4xl" set:html={icon}></span>
  </div>
  <h3 class="text-xl font-bold mb-2">{title}</h3>
  <p class="text-gray-600">{description}</p>
</div>