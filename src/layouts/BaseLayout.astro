---
// Importaciones
import '../styles/global.css';
import ProgressBar from '../components/ui/custom/ProgressBar.astro';

// Props e interfaces
export interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

// Valores por defecto
const { 
  title = 'Distribuidor KENDA - Motos y Equipos',
  description = 'Conviértete en distribuidor de neumáticos KENDA para motocicletas. Más de 5,000 distribuidores confían en nosotros con 66 años de experiencia en calidad y servicio.',
  ogImage = '/images/og-image.jpg'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Preconectar con dominios externos -->
    <link rel="preconnect" href="https://hook.make.com" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Precargar recursos críticos -->
    <link rel="preload" href="/images/hero/track.jpg" as="image" />
    <link rel="preload" href="/fonts/kenda-font.woff2" as="font" type="font/woff2" crossorigin />
    
    <!-- Fuentes -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Metadatos Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content={ogImage} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Inyección de scripts -->
    <slot name="head" />
  </head>
  <body class="bg-white text-kenda-dark flex flex-col min-h-screen">
    <!-- Barra de progreso horizontal -->
    <ProgressBar />
    
    <!-- Contenido principal -->
    <main class="flex-grow">
      <slot />
    </main>
    
    <!-- Footer -->
    <footer class="bg-kenda-dark text-white py-12">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <img src="/images/motos-equipos-logo-white.svg" alt="Motos y Equipos" width="150" height="50" class="mb-6" />
            <p class="text-sm text-gray-300 mb-4">Pino Suárez Nte. 750, Centro 64000, Monterrey N.L., México.</p>
            <div class="flex space-x-4 mt-4">
              <a href="#" class="text-gray-300 hover:text-white transition-colors" aria-label="Facebook">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M22 12c0-5.52-4.48-10-10-10S2 6.48 2 12c0 4.84 3.44 8.87 8 9.8V15H8v-3h2V9.5C10 7.57 11.57 6 13.5 6H16v3h-2c-.55 0-1 .45-1 1v2h3v3h-3v6.95c5.05-.5 9-4.76 9-9.95z"/>
                </svg>
              </a>
              <a href="#" class="text-gray-300 hover:text-white transition-colors" aria-label="Instagram">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2c2.717 0 3.056.01 4.122.06 1.065.05 1.79.217 2.428.465.66.254 1.216.598 1.772 1.153.509.5.902 1.105 1.153 1.772.247.637.415 1.363.465 2.428.047 1.066.06 1.405.06 4.122 0 2.717-.01 3.056-.06 4.122-.05 1.065-.218 1.79-.465 2.428a4.883 4.883 0 0 1-1.153 1.772c-.5.508-1.105.902-1.772 1.153-.637.247-1.363.415-2.428.465-1.066.047-1.405.06-4.122.06-2.717 0-3.056-.01-4.122-.06-1.065-.05-1.79-.218-2.428-.465a4.89 4.89 0 0 1-1.772-1.153 4.904 4.904 0 0 1-1.153-1.772c-.247-.637-.415-1.363-.465-2.428C2.013 15.056 2 14.717 2 12c0-2.717.01-3.056.06-4.122.05-1.066.217-1.79.465-2.428a4.88 4.88 0 0 1 1.153-1.772A4.897 4.897 0 0 1 5.45 2.525c.638-.247 1.362-.415 2.428-.465C8.944 2.013 9.283 2 12 2zm0 1.802c-2.67 0-2.987.01-4.04.059-.977.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.88-.344 1.857-.047 1.053-.059 1.37-.059 4.04 0 2.67.01 2.988.059 4.04.045.977.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.88.3 1.857.344 1.054.047 1.37.059 4.04.059 2.67 0 2.987-.01 4.04-.059.977-.045 1.504-.207 1.857-.344.467-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.88.344-1.857.047-1.054.059-1.37.059-4.04 0-2.67-.01-2.987-.059-4.04-.045-.977-.207-1.504-.344-1.857a3.097 3.097 0 0 0-.748-1.15 3.098 3.098 0 0 0-1.15-.748c-.353-.137-.88-.3-1.857-.344-1.053-.047-1.37-.059-4.04-.059zm0 3.063A5.135 5.135 0 1 1 12.001 17.2 5.135 5.135 0 0 1 12 6.865zM12 15.33a3.333 3.333 0 1 0 0-6.666 3.333 3.333 0 0 0 0 6.666zm6.536-8.464a1.2 1.2 0 1 1-2.4 0 1.2 1.2 0 0 1 2.4 0z"/>
                </svg>
              </a>
              <a href="#" class="text-gray-300 hover:text-white transition-colors" aria-label="YouTube">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M21.543 6.498C22 8.28 22 12 22 12s0 3.72-.457 5.502c-.254.985-.997 1.76-1.938 2.022C17.896 20 12 20 12 20s-5.893 0-7.605-.476c-.945-.266-1.687-1.04-1.938-2.022C2 15.72 2 12 2 12s0-3.72.457-5.502c.254-.985.997-1.76 1.938-2.022C6.107 4 12 4 12 4s5.896 0 7.605.476c.945.266 1.687 1.04 1.938 2.022zM10 15.5l6-3.5-6-3.5v7z"/>
                </svg>
              </a>
            </div>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-6">Enlaces rápidos</h3>
            <ul class="space-y-3">
              <li><a href="#beneficios" class="text-gray-300 hover:text-white transition-colors">Beneficios</a></li>
              <li><a href="#requisitos" class="text-gray-300 hover:text-white transition-colors">Requisitos</a></li>
              <li><a href="#testimoniales" class="text-gray-300 hover:text-white transition-colors">Testimoniales</a></li>
              <li><a href="#formulario" class="text-gray-300 hover:text-white transition-colors">Solicitud</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-6">Contáctanos</h3>
            <ul class="space-y-3">
              <li class="flex items-start space-x-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-kenda-red flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span class="text-gray-300">01 800 123 4567</span>
              </li>
              <li class="flex items-start space-x-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-kenda-red flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <span class="text-gray-300">contacto@motosyequipos.com</span>
              </li>
            </ul>
          </div>
        </div>
        <div class="mt-12 pt-8 border-t border-gray-700 text-center text-gray-400 text-sm">
          <p>Copyright © 2025 Motos y Equipos. Todos los derechos reservados.</p>
        </div>
      </div>
    </footer>
    
    <!-- Slot para scripts adicionales -->
    <slot name="footer-scripts" />
  </body>
</html>