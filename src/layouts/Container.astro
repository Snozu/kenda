---
/**
 * Container.astro
 * 
 * Componente para centrar y limitar el ancho del contenido.
 * Proporciona diferentes tamaños y opciones de padding.
 */

 interface Props {
  as?: 'div' | 'section' | 'article' | 'main' | 'footer' | 'header';
  size?: 'sm' | 'md' | 'lg' | 'xl' | 'full';
  className?: string;
  padding?: boolean;
  centered?: boolean;
}

const { 
  as: Element = 'div',
  size = 'lg',
  className = '',
  padding = true,
  centered = true,
} = Astro.props;

// Mapeo de tamaños a clases de ancho máximo
const sizeClasses = {
  sm: 'max-w-3xl',   // 768px
  md: 'max-w-4xl',   // 896px
  lg: 'max-w-6xl',   // 1152px
  xl: 'max-w-7xl',   // 1280px
  full: 'max-w-full' // Sin límite de ancho
};

// Construir clases CSS basadas en las props
const classes = [
  'w-full',
  centered ? 'mx-auto' : '',
  sizeClasses[size],
  padding ? 'px-4 sm:px-6 lg:px-8' : '',
  className
].filter(Boolean).join(' ');
---

<Element class={classes}>
  <slot />
</Element>