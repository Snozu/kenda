---
import "../styles/global.css";
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/common/Section.astro';
import SectionHeading from '../components/common/SectionHeading.astro';
import HeroSection from '../components/home/HeroSection.astro';
import BrandsSection from '../components/home/BrandsSection.astro';
import Container from '../layouts/Container.astro';
import BenefitCard from '../components/ui/custom/BenefitCard.astro';
import RequirementsSection from "../components/requirements/RequirementsSection.astro";
import FormSection from "../components/form/FormSection.astro";

// Iconos para beneficios
const benefitIcons = {
  precios: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 text-kenda-red"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>',
  calidad: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 text-kenda-red"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 01-1.043 3.296 3.745 3.745 0 01-3.296 1.043A3.745 3.745 0 0112 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 01-3.296-1.043 3.745 3.745 0 01-1.043-3.296A3.745 3.745 0 013 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 011.043-3.296 3.746 3.746 0 013.296-1.043A3.746 3.746 0 0112 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 013.296 1.043 3.746 3.746 0 011.043 3.296A3.745 3.745 0 0121 12z" /></svg>',
  soporte: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 text-kenda-red"><path stroke-linecap="round" stroke-linejoin="round" d="M12 3v17.25m0 0c-1.472 0-2.882.265-4.185.75M12 20.25c1.472 0 2.882.265 4.185.75M18.75 4.97A48.416 48.416 0 0012 4.5c-2.291 0-4.545.16-6.75.47m13.5 0c1.01.143 2.01.317 3 .52m-3-.52l2.62 10.726c.122.499-.106 1.028-.589 1.202a5.988 5.988 0 01-2.031.352 5.988 5.988 0 01-2.031-.352c-.483-.174-.711-.703-.59-1.202L18.75 4.971zm-16.5.52c.99-.203 1.99-.377 3-.52m0 0l2.62 10.726c.122.499-.106 1.028-.589 1.202a5.989 5.989 0 01-2.031.352 5.989 5.989 0 01-2.031-.352c-.483-.174-.711-.703-.59-1.202L5.25 4.971z" /></svg>'
};

// Datos de beneficios
const beneficios = [
  {
    title: "Precios Competitivos",
    description: "Optimiza tus ganancias con los mejores precios del mercado",
    icon: benefitIcons.precios
  },
  {
    title: "Calidad Garantizada",
    description: "Productos de alta calidad respaldados por una marca líder",
    icon: benefitIcons.calidad
  },
  {
    title: "Soporte Técnico",
    description: "Acompañamiento y apoyo para tu negocio",
    icon: benefitIcons.soporte
  }
];
---

<BaseLayout title="Distribuidor KENDA - Motos y Equipos">
  <!-- Hero Section con la implementación actualizada -->
  <HeroSection />
  
  <!-- Sección de Beneficios -->
  <Section id="beneficios" background="light" spacing="lg">
    <Container>
      <SectionHeading
        title="Beneficios"
        description="En Motocicletas y Equipos, ofrecemos precios competitivos respaldados por 66 años de experiencia en calidad y servicio."
      />
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {beneficios.map(beneficio => (
          <BenefitCard
            title={beneficio.title}
            description={beneficio.description}
            icon={beneficio.icon}
          />
        ))}
      </div>
    </Container>
  </Section>
  
  <!-- Sección de Requisitos -->
  <RequirementsSection />

  <!-- Sección de Formulario -->
  <FormSection />
  
  <!-- Sección de Marcas -->
  <BrandsSection />
  
  <!-- La sección de contacto duplicada ha sido eliminada -->
</BaseLayout>